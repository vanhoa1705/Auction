<div class="col-12 card shadow mb-4">
  <div class="d-flex justify-content-between">
    <div><h2>Danh sách sản phẩm</h2></div>
    <div class="mt-3">
      {{!-- <a class="btn btn-outline-success" href="/admin/users/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add category
      </a> --}}
    </div>
  </div>

  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">
      Không có dữ liệu.
    </p>
  </div>
  {{else}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Hình ảnh</th>
        <th scope="col">Tên sản phẩm</th>
        <th scope="col">Giá</th>
        <th scope="col">Số lượng</th>
        <th scope="col">Danh mục</th>
        <th scope="col">Trạng thái</th>
        <th scope="col">Tác vụ</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.products}}
      <tr>
        <th scope="row" class="text-center">{{id_pro}}</th>
        <td ><img src="{{image}}" height="80px" width="80px"></td>
        <td class="text-left">{{name_pro}}</td>
        
        <td >{{bidPrice}}</td>
        <td >{{qty}}</td>
        <td >abc</td>
        <td >
          {{#ifCond status_pro 1}}
            <span class="badge badge-pill badge-success">Đang bán</span>
          {{else}}
            <span class="badge badge-pill badge-dark">Ẩn</span>
          {{/ifCond}}
        </td>
        <td class="text-right">
          <a class="btn btn-sm btn-primary" href="/admin/products/view/{{id_pro}}" type="role">
            <i class="fa fa-eye" aria-hidden="true"></i>
          </a>
          
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}

</div>

