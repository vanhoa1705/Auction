<div class="col-12 card shadow mb-4">
  <div class="d-flex justify-content-between">
    <div><h2>Danh sách danh mục</h2></div>
    <div class="mt-3">
      <a class="btn btn-outline-success" href="/admin/categories/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add category
      </a>
    </div>
  </div>

  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">
      Không có dữ liệu.
    </p>
  </div>
  {{else}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Tên danh mục</th>
        <th scope="col">Cấp danh mục</th>
        <th scope="col">Tác vụ</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.categories}}
      <tr>
        <th scope="row" class="text-center">{{id}}</th>
        <td>
          {{name}}
        </td>
        <td>
          {{#ifCond id_parent 0}} (Danh mục cấp 1)
          {{else}} (Danh mục cấp 2)
          {{/ifCond}}
        </td>
        <td class="text-center">
          <button class="btn btn-sm btn-primary" onclick="window.location.href='/admin/categories/edit/{{id}}'" title="Sửa">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}
</div>