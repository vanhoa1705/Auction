<div class="col-12 card shadow mb-4">
  <div class="d-flex justify-content-between">
    <div>
      <h2>Danh sách người dùng</h2>
    </div>
    <div class="mt-3">
      <a class="btn btn-outline-success" href="/admin/users/upgradelist" role="button">
        <i class="fa fa-eye" aria-hidden="true"></i>
        Upgrade list
      </a>

    </div>
  </div>


  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">
      Không có dữ liệu.
    </p>
  </div>
  {{else}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Hình ảnh</th>
        <th scope="col">Username</th>
        <th scope="col">SDT</th>
        <th scope="col">Email</th>
        <th scope="col">Rating</th>
        <th scope="col">Loại tài khoản</th>
        <th scope="col">Trạng thái</th>
        <th scope="col">Tác vụ</th>

      </tr>
    </thead>
    <tbody>
      {{#each this.users}}
      <tr>
        <th scope="row" class="text-center">{{id}}</th>
        <td><img src="{{avatar}}" height="80px" width="80px"></td>
        <td class="text-left">{{username}}</td>
        <td class="text-left">{{Phone}}</td>
        <td class="text-left">{{email}}</td>
        <td>{{rating}}</td>
        {{!-- Loai tai khoan --}}
        <td>{{#ifCond Permission 1}}Seller{{else}}Bidder{{/ifCond}}</td>
        <td>
          {{#ifCond status 1}}
          <span class="badge badge-pill badge-success">Đang hoạt động</span>
          {{else}}
          <span class="badge badge-pill badge-dark">Ẩn</span>
          {{/ifCond}}
        </td>
        <td class="text-right">
          <button class="btn btn-sm btn-primary" onclick="window.location.href='/admin/users/detail/{{id}}'"
            title="Chi tiết">
            <i class="fa fa-eye" aria-hidden="true"></i>
          </button>
          <button class="btn btn-sm btn-primary" onclick="window.location.href='/admin/users/edit/{{id}}'" title="Sửa">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}

</div>